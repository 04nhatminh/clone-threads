<div class="flex flex-col items-center justify-center flex-grow min-h-screen bg-white">
    <!-- Logo -->
    <a href="/"><i class="fa-brands fa-threads fa-3x"></i></a>
    <div class="text-center w-full max-w-[386px] sm-custom:max-w-[418px] p-6 gap-0 mb-2">
        
        <!-- Heading -->
        <h1 class="mb-2 text-xl font-bold">Forgot password</h1>
        {{#if done}}
        <p class="mb-4 opacity-40">An email has been sent to your email. Please follow the instructtion in that email to reset your password. </p>
        {{else}}
        <p class="mb-4 opacity-40">Enter your email address and we'll send you a link to reset your password.
        </p>
        {{/if}}

        {{#unless done}}
        <!-- Form -->
        <form class="flex flex-col gap-2" method="POST" action="/forgot" id="forgot-form" onsubmit="validateForgotPasswordForm(event)">
            <!-- Email Input -->
            <div>
                <label for="email" class="sr-only">Email</label>
                <input 
                    type="text" 
                    id="email"
                    class="form-control bg-[#F5F5F5] w-full p-4 outline-none rounded-xl"
                    name="email" 
                    placeholder="Email"
                >
                <small id="email-error" class="text-red-600"></small>
            </div>

            {{#if forgotMessage}}
            <div class="flex justify-center">
                <small class="text-red-600">{{{forgotMessage}}}</small>
            </div>   
            {{/if}}
            <!-- Submit Button -->
            <button id="send-button" type="submit"
                class="w-full p-4 font-medium text-white bg-black text-opacity-40 rounded-2xl"
                >
                Send a reset link
            </button>
        </form>
        <!-- Or divider -->
        <div class="flex items-center py-5 mt-4">
            <hr class="flex-grow">
            <small class="mx-2 opacity-40 ">Remembered password</small>
            <hr class="flex-grow">
        </div>
        <!-- Login Redirect -->
        <button id="loginBtn" type="button"
                class="w-full p-4 font-medium text-white bg-black rounded-2xl"
                onclick="window.location.href='/login'">
                Log in
        </button>
        {{/unless}}
    </div>
</div>

<script>
    document.querySelectorAll('.form-control').forEach(input => {
        input.addEventListener('focus', () => {
            input.classList.add('border', 'border-gray-300');
        });
        input.addEventListener('blur', () => {
            input.classList.remove('border', 'border-gray-300');
        });
    });

    document.querySelectorAll('.form-control').forEach(input => {
        input.addEventListener('input', () => {
            const allFilled = Array.from(document.querySelectorAll('.form-control')).every(input => input.value);
            if (allFilled) {
                document.getElementById('send-button').classList.remove('text-opacity-40');
            } else {
                document.getElementById('send-button').classList.add('text-opacity-40');
            }
        });
    });

    const regexEmail = /^(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|"(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21\x23-\x5b\x5d-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])*")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\[(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?|[a-z0-9-]*[a-z0-9]:(?:[\x01-\x08\x0b\x0c\x0e-\x1f\x21-\x5a\x53-\x7f]|\\[\x01-\x09\x0b\x0c\x0e-\x7f])+)\])$/;

    function validateForgotPasswordForm(event) {
        event.preventDefault();
        // Lấy giá trị từ các input
        const email = document.getElementById('email').value.trim();
        // Lấy các phần tử thông báo lỗi
        const emailError = document.getElementById('email-error');
        // Xóa thông báo lỗi cũ
        emailError.classList.add('hidden');
        emailError.textContent = '';
        let isValid = true;
        // Kiểm tra email
        if (!email) {
            emailError.textContent = 'Email is required';
            emailError.classList.remove('hidden');
            isValid = false;
        } else if (!regexEmail.test(email)) {
            emailError.textContent = 'Please enter a valid email address';
            emailError.classList.remove('hidden');
            isValid = false;
        }
        // Nếu không hợp lệ, dừng lại
        if (!isValid) return;
        // Tiến hành gửi dữ liệu
        document.getElementById('forgot-form').submit();
    }

</script>