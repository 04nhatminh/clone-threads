<div class="w-full flex flex-col justify-center items-center">
    <!-- Logo -->
    <a href="./index.html"><i class="fa-brands fa-threads fa-3x"></i></a>

    <!-- Heading -->
    <h1 class="font-bold text-3xl p-4">Log in</h1>

    <!-- Form -->
    <form class="flex flex-col w-1/3 min-w-[400px] gap-4" method="POST" action="/login">
        <!-- Email Input -->
        <input type="text" class="form-control rounded-2xl p-3 outline-none bg-[#f5f5f5]" name="email"
            placeholder="Username or email" required>


        <!-- Password Input -->

        <input type="password" class="form-control rounded-2xl p-3 outline-none bg-[#f5f5f5]" name="password"
            placeholder="Password" required>

        <!-- Submit Button -->
        <!-- Web tĩnh nên tạm thời sử dụng type = button
                    và dùng onclick điều hướng đến trang chủ, coi như đã đăng nhập -->
        <button id="login-button" type="submit"
            class="bg-black text-white text-opacity-40 font-medium rounded-2xl p-4 w-full">
            Log in
        </button>
    </form>

    <div class="text-center opacity-40 my-2">
        <a href="./forgotPassword.html" class="">Forgot password?</a>
    </div>

    <!-- Or divider -->
    <div class="">
        <hr class="w-1/2 min-w-[400px]">
        <span class="opacity-40 flex justify-center mb-1">or</span>
        <hr class="w-1/2 min-w-[400px]">
    </div>

    <!-- Login with Google -->
    <button type="button" id="google-login" onclick="window.location.href='./index.html'"
        class="flex my-2 justify-center items-center gap-2 p-4 rounded-2xl border border-black w-1/3 min-w-[400px] hover:bg-black hover:text-white">
        <i class="fa-brands fa-google fa-xl pt-[3px]"></i>
        <span>Continue with Google</span>
    </button>


    <!-- Signup Redirect -->
    <button type="button" class="bg-black text-white font-medium rounded-2xl p-4 w-1/3 min-w-[400px]"
        onclick="window.location.href='./signup.html'">
        Sign up
    </button>
</div>

<script>
    document.querySelectorAll('.form-control').forEach(input => {
        input.addEventListener('focus', () => {
            input.classList.add('border', 'border-gray-300');
        });
        input.addEventListener('blur', () => {
            input.classList.remove('border', 'border-gray-300');
        });
    });

    document.querySelectorAll('.form-control').forEach(input => {
        input.addEventListener('input', () => {
            const allFilled = Array.from(document.querySelectorAll('.form-control')).every(input => input.value);
            if (allFilled) {
                document.getElementById('login-button').classList.remove('text-opacity-40');
            } else {
                document.getElementById('login-button').classList.add('text-opacity-40');
            }
        });
    });
</script>